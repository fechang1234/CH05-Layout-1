<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    tools:context=".M0500">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B34F4F">

        <TextView
            android:id="@+id/m0500_t001"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/Aqua"
            android:gravity="center_vertical"
            android:text="@string/m0500_t001"
            android:textColor="@color/Navy"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/m0500_e001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:ems="10"
            android:gravity="end"
            android:hint="@string/hint"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

    </TableRow>

    <Button
        android:id="@+id/m0500_b001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sm10dp"
        android:layout_marginBottom="@dimen/sm10dp"
        android:backgroundTint="@color/Yellow"
        android:text="@string/m0500_b001"
        android:textColor="@color/Red"
        android:textSize="18sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/m0500_t002"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@color/Aqua"
            android:gravity="center_vertical"
            android:text="@string/m0500_t002"
            android:textColor="@color/Navy"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/m0500_t003"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="end"
            android:text="@string/m0500_t003"
            android:textSize="18sp" />

    </TableRow>

    <TextView
        android:id="@+id/m0500_t004"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="end"
        android:text="@string/myname"
        android:textColor="@color/Navy"
        android:textSize="18sp" />
</LinearLayout>